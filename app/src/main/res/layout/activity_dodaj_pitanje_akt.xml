<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aktivnosti.DodajPitanjeAkt">

    <Button
        android:id="@+id/btnDodajTacan"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:text="Dodaj tacan"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="576dp" />

    <ListView
        android:id="@+id/lvOdgovori"
        android:layout_width="394dp"
        android:layout_height="219dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="176dp" />

    <EditText
        android:id="@+id/etNaziv"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Naziv pitanja - INPUT"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="98dp"
        android:layout_height="37dp"
        android:text="Odgovori"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="103dp" />

    <EditText
        android:id="@+id/etOdgovor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Odgovor"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="448dp" />

    <Button
        android:id="@+id/btnDodajOdgovor"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:text="Dodaj"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="512dp" />

    <Button
        android:id="@+id/btnDodajPitanje"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="SPASI PITANJE"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="643dp" />

</android.support.constraint.ConstraintLayout>